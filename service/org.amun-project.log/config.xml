  <event>
    <listener name="core.record_change" class="\AmunService\Log\RecordListener"/>
  </event>
  <library>
    <dir name="AmunService">
      <dir name="Log">
        <file name="Form.php" md5="2e9a0a6cce38ac3cf008d7a8103a6a3b"/>
        <file name="Handler.php" md5="a973f2b79094f3c39e8fef8c144e76d5"/>
