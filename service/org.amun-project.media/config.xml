  <permissions>
    <perm name="view" description="Media View"/>
    <perm name="add" description="Media Add"/>
    <perm name="edit" description="Media Edit"/>
    <perm name="delete" description="Media Delete"/>
  </permissions>
  <registry>
    <table name="media"/>
    <param name="upload_size" value="4194304" type="INTEGER"/>
