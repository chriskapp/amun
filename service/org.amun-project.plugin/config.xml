<?xml version="1.0" encoding="UTF-8"?>
<service xmlns="http://amun-project.org" signature="caa2f659da398fecf663e77c9eb8ce779074f3c2">
  <status>normal</status>
  <name>plugin</name>
  <description>Service to list plugins. Each plugin can be maintained by multiple users. News versions can be added by maintainer</description>
  <path>/plugin</path>
  <namespace>plugin</namespace>
  <type>http://ns.amun-project.org/2011/amun/service/plugin</type>
  <link>http://amun.phpsx.org</link>
  <author><![CDATA[Christoph Kappestein <k42b3.x@gmail.com>]]></author>
  <license>GPLv3</license>
  <version>0.0.1</version>
  <required>
    <service>org.amun-project.comment</service>
  </required>
  <api>
    <service>
      <type>http://ns.amun-project.org/2011/amun/service/plugin</type>
      <type>http://ns.amun-project.org/2011/amun/data/1.0</type>
      <uri>/</uri>
    </service>
    <service>
      <type>http://ns.amun-project.org/2011/amun/service/plugin/maintainer</type>
      <type>http://ns.amun-project.org/2011/amun/data/1.0</type>
      <uri>/maintainer</uri>
    </service>
    <service>
      <type>http://ns.amun-project.org/2011/amun/service/plugin/release</type>
      <type>http://ns.amun-project.org/2011/amun/data/1.0</type>
      <uri>/release</uri>
    </service>
  </api>
  <activity>
    <template type="INSERT" verb="add" table="plugin_release" path="view?id={record.id}"><![CDATA[
<p><a href="{user.profileUrl}">{user.name}</a> has released version {record.version} ({record.status})</p>
]]></template>
  </activity>
  <permissions>
    <perm name="view" description="Service Plugin View"/>
    <perm name="add" description="Service Plugin Add"/>
    <perm name="edit" description="Service Plugin Edit"/>
    <perm name="delete" description="Service Plugin Delete"/>
    <perm name="comment_add" description="Service Plugin Comment Add"/>
    <perm name="maintainer_view" description="Service Plugin Maintainer View"/>
    <perm name="maintainer_add" description="Service Plugin Maintainer Add"/>
    <perm name="maintainer_edit" description="Service Plugin Maintainer Edit"/>
    <perm name="maintainer_delete" description="Service Plugin Maintainer Delete"/>
    <perm name="release_view" description="Service Plugin Release View"/>
    <perm name="release_add" description="Service Plugin Release Add"/>
    <perm name="release_edit" description="Service Plugin Release Edit"/>
    <perm name="release_delete" description="Service Plugin Release Delete"/>
  </permissions>
  <navigation>
    <option name="index"/>
    <option name="view"/>
  </navigation>
  <registry>
    <table name="plugin"/>
    <table name="plugin_maintainer"/>
    <table name="plugin_release"/>
  </registry>
  <library>
    <dir name="AmunService">
      <dir name="Plugin">
        <file name="Form.php" md5="724dcc0825aaf0f6232f9490cfaafdef"/>
        <file name="Handler.php" md5="fea9e10b329b19de94464788cfe35c6b"/>
        <dir name="Maintainer">
          <file name="Form.php" md5="07e59888263b5a15c7974ca521c12ab9"/>
