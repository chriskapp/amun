    <query><![CDATA[CREATE TABLE IF NOT EXISTS `{table.amun_service_plugin}` (
  `id` INT(10) NOT NULL AUTO_INCREMENT,
  `globalId` VARCHAR(36) NOT NULL,
  `pageId` INT(10) NOT NULL,
  `userId` INT(10) NOT NULL,
  `status` INT(10) NOT NULL,
  `urlTitle` VARCHAR(128) NOT NULL,
  `title` VARCHAR(128) NOT NULL,
  `description` TEXT NOT NULL,
  `rateUp` INT(10) NOT NULL DEFAULT '0',
  `rateDown` INT(10) NOT NULL DEFAULT '0',
  `releaseDate` DATETIME NOT NULL,
  `date` DATETIME NOT NULL,
  PRIMARY KEY (`id`),
  UNIQUE KEY `globalId` (`globalId`)
) ENGINE=MyISAM DEFAULT CHARSET=utf8;]]></query>
    <query><![CDATA[CREATE TABLE IF NOT EXISTS `{table.amun_service_plugin_maintainer}` (
  `id` INT(10) NOT NULL AUTO_INCREMENT,
  `pluginId` INT(10) NOT NULL,
  `userId` INT(10) NOT NULL,
  PRIMARY KEY (`id`),
  UNIQUE KEY `pluginUserId` (`pluginId`,`userId`)
) ENGINE=MyISAM DEFAULT CHARSET=utf8;]]></query>
    <query><![CDATA[CREATE TABLE IF NOT EXISTS `{table.amun_service_plugin_release}` (
  `id` INT(10) NOT NULL AUTO_INCREMENT,
  `globalId` VARCHAR(36) NOT NULL,
  `pluginId` INT(10) NOT NULL,
  `userId` INT(10) NOT NULL,
  `status` ENUM('STABLE','BETA','ALPHA') NOT NULL,
  `version` VARCHAR(32) NOT NULL,
  `href` VARCHAR(256) NOT NULL,
  `date` DATETIME NOT NULL,
  PRIMARY KEY (`id`)
) ENGINE=MyISAM DEFAULT CHARSET=utf8;]]></query>
