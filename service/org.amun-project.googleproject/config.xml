<?xml version="1.0" encoding="UTF-8"?>
<service xmlns="http://amun-project.org" signature="07eaa3d797c78e57b7e89e52f01dfa958ec9bf23">
  <status>normal</status>
  <name>googleproject</name>
  <path>/service/googleproject</path>
  <namespace>googleproject</namespace>
  <type>http://ns.amun-project.org/2011/amun/service/googleproject</type>
  <link>http://amun.phpsx.org</link>
  <author><![CDATA[Christoph Kappestein <k42b3.x@gmail.com>]]></author>
  <license>GPLv3</license>
  <version>0.0.1</version>
  <permissions>
    <perm name="view" description="Service Googleproject View"/>
    <perm name="add" description="Service Googleproject Add"/>
    <perm name="edit" description="Service Googleproject Edit"/>
    <perm name="delete" description="Service Googleproject Delete"/>
    <perm name="author_view" description="Service Googleproject Author View"/>
    <perm name="author_add" description="Service Googleproject Author Add"/>
    <perm name="author_edit" description="Service Googleproject Author Edit"/>
    <perm name="author_delete" description="Service Googleproject Author Delete"/>
  </permissions>
  <library>
    <dir name="AmunService">
        <dir name="Googleproject">
            <include />
        </dir>
    </dir>
  </library>
  <database>
    <query><![CDATA[INSERT INTO `{table.amun_system_registry}` (`name`, `type`, `value`) VALUES
('table.amun_service_googleproject', 'STRING', '{config.table_prefix}service_googleproject'),
('table.amun_service_googleproject_commit', 'STRING', '{config.table_prefix}service_googleproject_commit'),
('table.amun_service_googleproject_author', 'STRING', '{config.table_prefix}service_googleproject_author');]]></query>
    <query><![CDATA[CREATE TABLE IF NOT EXISTS `{table.amun_service_googleproject}` (
  `id` INT(10) NOT NULL AUTO_INCREMENT,
  `globalId` VARCHAR(36) NOT NULL,
  `pageId` INT(10) NOT NULL,
  `userId` INT(10) NOT NULL,
  `name` VARCHAR(32) NOT NULL,
  `secret` VARCHAR(128) NOT NULL,
  `date` DATETIME NOT NULL,
  PRIMARY KEY (`id`),
  UNIQUE KEY `globalId` (`globalId`)
) ENGINE=MyISAM DEFAULT CHARSET=utf8;]]></query>
    <query><![CDATA[CREATE TABLE IF NOT EXISTS `{table.amun_service_googleproject_commit}` (
  `id` int(10) NOT NULL AUTO_INCREMENT,
  `globalId` VARCHAR(36),
  `projectId` INT(10),
  `authorId` INT(10),
  `revision` INT(10),
  `url` VARCHAR(256),
  `message` VARCHAR(512),
  `commitDate` DATETIME,
  `date` DATETIME,
  PRIMARY KEY (`id`),
  UNIQUE KEY `globalId` (`globalId`)
) ENGINE=MyISAM DEFAULT CHARSET=utf8;]]></query>
    <query><![CDATA[CREATE TABLE IF NOT EXISTS `{table.amun_service_googleproject_author}` (
  `id` int(10) NOT NULL AUTO_INCREMENT,
  `userId` INT(10),
  `name` VARCHAR(32),
  `date` DATETIME,
  PRIMARY KEY (`id`)
) ENGINE=MyISAM DEFAULT CHARSET=utf8;]]></query>
    <query storeID="content_api"><![CDATA[INSERT INTO `{table.amun_content_api}` (`serviceId`, `priority`, `endpoint`) VALUES
({service.id}, 0, 'service/googleproject');]]></query>
    <query><![CDATA[INSERT INTO `{table.amun_content_api_type}` (`apiId`, `type`) VALUES
({id.content_api}, '{service.type}'),
({id.content_api}, 'http://ns.amun-project.org/2011/amun/data/1.0');]]></query>
    <query storeID="content_api"><![CDATA[INSERT INTO `{table.amun_content_api}` (`serviceId`, `priority`, `endpoint`) VALUES
({service.id}, 0, 'service/googleproject/author');]]></query>
    <query><![CDATA[INSERT INTO `{table.amun_content_api_type}` (`apiId`, `type`) VALUES
({id.content_api}, '{service.type}/author'),
({id.content_api}, 'http://ns.amun-project.org/2011/amun/data/1.0');]]></query>
    <query><![CDATA[INSERT INTO `{table.amun_content_service_option}` (`serviceId`, `name`) VALUES
({service.id}, 'index'),
({service.id}, 'view');]]></query>
    <query><![CDATA[INSERT INTO `{table.amun_user_activity_template}` (`type`, `verb`, `table`, `path`, `summary`) VALUES
('INSERT', 'add', 'amun_service_googleproject_commit', '', '<p><a href="{user.profileUrl}">{user.name}</a> has commited <a href="{record.url}">r{record.revision}</a></p><blockquote>{record.message}</blockquote>');]]></query>
  </database>
</service>
