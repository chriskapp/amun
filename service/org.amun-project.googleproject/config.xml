  <license>GPLv3</license>
  <version>0.0.1</version>
  <api>
    <service>
      <type>http://ns.amun-project.org/2011/amun/service/googleproject</type>
      <type>http://ns.amun-project.org/2011/amun/data/1.0</type>
      <uri>/</uri>
    </service>
    <service>
      <type>http://ns.amun-project.org/2011/amun/service/googleproject/author</type>
      <type>http://ns.amun-project.org/2011/amun/data/1.0</type>
      <uri>/author</uri>
    </service>
  </api>
  <activity>
    <template type="INSERT" verb="add" table="googleproject_commit" path=""><![CDATA[
<p><a href="{user.profileUrl}">{user.name}</a> has commited <a href="{record.url}">r{record.revision}</a></p><blockquote>{record.message}</blockquote>
]]></template>
  </activity>
  <permissions>
    <perm name="view" description="Service Googleproject View"/>
    <perm name="add" description="Service Googleproject Add"/>
    <perm name="edit" description="Service Googleproject Edit"/>
    <perm name="delete" description="Service Googleproject Delete"/>
    <perm name="author_view" description="Service Googleproject Author View"/>
    <perm name="author_add" description="Service Googleproject Author Add"/>
    <perm name="author_edit" description="Service Googleproject Author Edit"/>
    <perm name="author_delete" description="Service Googleproject Author Delete"/>
  </permissions>
  <registry>
    <table name="googleproject"/>
    <table name="googleproject_commit"/>
    <table name="googleproject_author"/>
  </registry>
  <event>
    <publisher name="googleproject.commit" description="Notifies if a commit was made"/>
    <listener name="googleproject.commit" class="AmunService_Googleproject_CommitListener"/>
  </event>
