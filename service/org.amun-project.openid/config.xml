  <database>
    <query><![CDATA[CREATE TABLE IF NOT EXISTS `{table.openid}` (
  `id` int(10) NOT NULL AUTO_INCREMENT,
  `userId` int(10) NOT NULL,
  `assocId` int(10) NOT NULL,
  `status` int(10) NOT NULL DEFAULT '1',
