  <permissions>
    <perm name="view" description="Service Comment View"/>
    <perm name="add" description="Service Comment Add"/>
    <perm name="edit" description="Service Comment Edit"/>
    <perm name="delete" description="Service Comment Delete"/>
  </permissions>
  <library>
    <dir name="AmunService">
        <dir name="Comment">
            <include />
        </dir>
    </dir>
