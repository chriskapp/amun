<?xml version="1.0" encoding="UTF-8"?>
<service xmlns="http://amun-project.org" signature="9d5d388025d25703104f9c1c00e24abbdfd369de">
  <status>system</status>
  <name>comment</name>
  <description>General comment system wich can be used to store comments refering to an id</description>
  <path>/comment</path>
  <namespace>comment</namespace>
  <type>http://ns.amun-project.org/2011/amun/service/comment</type>
  <link>http://amun.phpsx.org</link>
  <author><![CDATA[Christoph Kappestein <k42b3.x@gmail.com>]]></author>
  <license>GPLv3</license>
  <version>0.0.1</version>
  <api>
    <service>
      <type>http://ns.amun-project.org/2011/amun/service/comment</type>
      <type>http://ns.amun-project.org/2011/amun/data/1.0</type>
      <uri>/</uri>
    </service>
  </api>
  <activity>
    <template type="INSERT" verb="add" table="comment" path="view?id={record.refId}#comment-{record.id}"><![CDATA[
<p><a href="{user.profileUrl}">{user.name}</a> has created an <a href="{object.url}">comment</a></p><blockquote>{record.text}</blockquote>
]]></template>
  </activity>
  <permissions>
    <perm name="view" description="Comment View"/>
    <perm name="add" description="Comment Add"/>
    <perm name="edit" description="Comment Edit"/>
    <perm name="delete" description="Comment Delete"/>
  </permissions>
  <registry>
    <table name="comment"/>
  </registry>
  <library>
    <dir name="AmunService">
      <dir name="Comment">
        <file name="Form.php" md5="b2a9f8bd1110745433e81dff1be8ef03"/>
        <file name="Handler.php" md5="9421f58ac0addb7d94f402d670ef1cb2"/>
        <file name="Record.php" md5="a34ead3a2bcea5e3fa652c111bc01ecb"/>
        <file name="Stream.php" md5="53929ec61188fdba25e2fe10eba2b413"/>
        <file name="Table.php" md5="e1f0165d8a109881d2a13087ff057ebe"/>
      </dir>
    </dir>
  </library>
  <database>
    <query><![CDATA[CREATE TABLE IF NOT EXISTS `{table.comment}` (
  `id` INT(10) NOT NULL AUTO_INCREMENT,
  `globalId` VARCHAR(36) NOT NULL,
  `pageId` INT(10) NOT NULL,
  `userId` INT(10) NOT NULL,
  `refId` INT(10) NOT NULL,
  `text` LONGTEXT NOT NULL,
  `date` DATETIME NOT NULL,
  PRIMARY KEY (`id`),
  UNIQUE KEY `globalId` (`globalId`)
) ENGINE=MyISAM DEFAULT CHARSET=utf8;]]></query>
  </database>
</service>
