<?xml version="1.0" encoding="UTF-8"?>
<service xmlns="http://amun-project.org" signature="3bbfb9e62fbf0b750df1f098fb3c25c9187c914b">
  <status>normal</status>
  <name>news</name>
  <description>Implementation of an News system. It is possible to post news and users can comment each entry</description>
  <path>/news</path>
  <namespace>news</namespace>
  <type>http://ns.amun-project.org/2011/amun/service/news</type>
  <link>http://amun.phpsx.org</link>
  <author><![CDATA[Christoph Kappestein <k42b3.x@gmail.com>]]></author>
  <license>GPLv3</license>
  <version>0.0.1</version>
  <required>
    <service>org.amun-project.comment</service>
  </required>
  <api>
    <service>
      <type>http://ns.amun-project.org/2011/amun/service/news</type>
      <type>http://ns.amun-project.org/2011/amun/data/1.0</type>
      <uri>/</uri>
    </service>
  </api>
  <activity>
    <template type="INSERT" verb="add" table="news" path="view?id={record.id}"><![CDATA[
<p><a href="{user.profileUrl}">{user.name}</a> has created a <a href="{object.url}">news</a></p><blockquote>{record.text}</blockquote>
]]></template>
  </activity>
  <permissions>
    <perm name="view" description="News View"/>
    <perm name="add" description="News Add"/>
    <perm name="edit" description="News Edit"/>
    <perm name="delete" description="News Delete"/>
    <perm name="comment_add" description="News Comment Add"/>
  </permissions>
  <navigation>
    <option name="index"/>
    <option name="view"/>
  </navigation>
  <registry>
    <table name="news"/>
  </registry>
  <library>
    <dir name="AmunService">
      <dir name="News">
        <file name="Form.php" md5="6f32bd6ea3a7fe5e82898227389032b4"/>
        <file name="Handler.php" md5="11299a583df9a23a61a341f5e61f478e"/>
        <file name="Record.php" md5="6899cf9cf8af378ecd6576abd864c6ee"/>
        <file name="Stream.php" md5="0aefbdcdd1d58d369f34c0cef7ac7516"/>
        <file name="Table.php" md5="a03c8141e67c6a772eeda63ddebbef30"/>
      </dir>
    </dir>
  </library>
  <database>
    <query><![CDATA[CREATE TABLE IF NOT EXISTS `{table.news}` (
  `id` INT(10) NOT NULL AUTO_INCREMENT,
  `globalId` VARCHAR(36) NOT NULL,
  `pageId` INT(10) NOT NULL,
  `userId` INT(10) NOT NULL,
  `urlTitle` VARCHAR(128) NOT NULL,
  `title` VARCHAR(128) NOT NULL,
  `text` LONGTEXT NOT NULL,
  `date` DATETIME NOT NULL,
  PRIMARY KEY (`id`),
  UNIQUE KEY `globalId` (`globalId`)
) ENGINE=MyISAM DEFAULT CHARSET=utf8;]]></query>
  </database>
</service>
